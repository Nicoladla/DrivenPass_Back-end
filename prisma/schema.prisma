// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  password    String
  createdAt   DateTime     @default(now())
  credentials Credential[]
  secureNotes SecureNote[]
  wiFis       WiFi[]
  cards       Card[]

  @@map("users")
}

model Credential {
  id        Int      @id @default(autoincrement())
  title     String
  url       String
  user      String
  password  String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
  User      User?    @relation(fields: [userId], references: [id])
  userId    Int?

  @@map("credentials")
}

model SecureNote {
  id         Int      @id @default(autoincrement())
  title      String
  annotation String
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int

  @@map("secureNotes")
}

model WiFi {
  id        Int      @id @default(autoincrement())
  title     String
  name      String
  password  String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])
  userId    Int

  @@map("wiFis")
}

model Card {
  id             Int      @id @default(autoincrement())
  title          String
  name           String
  password       String
  number         String   @unique
  securityCode   String
  expirationDate DateTime @db.Date
  isVirtual      Boolean
  type           CardType
  updatedAt      DateTime @updatedAt
  createdAt      DateTime @default(now())
  User           User     @relation(fields: [userId], references: [id])
  userId         Int

  @@map("cards")
}

enum CardType {
  CREDIT
  DEBIT
  BOTHTYPES
}
